---
interface Technology {
  name: string;
  image: {
    src: string;
    width?: number;
    height?: number;
    format?: string;
  };
}

interface Project {
  title: string;
  image: string;
  status?: string;
  description: string;
  technologies: Technology[];
  githubUrl: string;
  deployUrl: string;
}

const project: Project = Astro.props as Project;
console.log('projetos', project);


---

<li class="m-4 flex h-[700px] max-w-xs rounded-md overflow-hidden cards relative">
	<div class="flex flex-col items-center w-full">
    <div>
      <img class="w-full h-60 object-cover" src={project.image} alt={project.title} />
    </div>
    <div class="text-center flex flex-col justify-center items-center space-y-1 mt-5">
      <p>{project.title}</p>
    </div>
    <div class="bg-secundary w-2/3 rounded-xl shadow-lg">
      <p>{project.status}</p>
    </div>
    <p>{project.description}</p>
    <div>
      {project.technologies && project.technologies.map((tech) => (
        <div class="flex items-center space-x-2 ring-2 ring-blue-500/50 border-2 rounded-lg p-1 shadow-md">
          <img src={tech.image.src} alt={tech.name} class="w-4" />
          <span>{tech.name}</span>
        </div>
      ))}
    </div>
    <div>
      <a href={project.githubUrl} target="_blank" class="mr-2">
        <!-- <i class="fa-brands fa-github-alt"></i> -->
      </a>
      <a href={project.deployUrl} target="_blank" class="mr-2">
        <!-- <i class="fa-solid fa-globe"></i> -->
      </a>
    </div>
  </div>
</li>

