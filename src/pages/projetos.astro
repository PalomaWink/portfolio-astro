---
import { projectsData } from '../helpers/projectList.ts';
import ProjectCard from '../components/ProjectCard.astro';

---

<div id="projetos" class="min-h-screen mt-20">
  <h1 class="font-playfair titles text-center text-4xl mb-4 bg-clip-text text-transparent bg-gradient-to-r from-rose-400 to-purple-800">
    &lt;&nbsp;
    Projetos
    &frasl;&nbsp;&gt;
  </h1>
  <ul
    class="flex justify-around flex-wrap max-w-full max-h-full m-5"
  >
    {
      projectsData.map((project) => (
        <ProjectCard project={project}/>
      ))
    }
  </ul>
</div>